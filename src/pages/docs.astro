---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Documentation - Permanent Electronics">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-secondary-800 to-secondary-900 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="flex justify-center mb-6">
        <img 
          src="/images/perm-el-logo.png" 
          alt="Permanent Electronics Logo" 
          class="h-16 w-auto"
        />
      </div>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Documentation</h1>
      <p class="text-xl text-gray-300">
        Build guides, schematics, and support documents for all our projects
      </p>
    </div>
  </section>

  <!-- Documentation Categories -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        
        <!-- Build Guides -->
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
          <div class="bg-primary-100 w-12 h-12 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Build Guides</h3>
          <p class="text-gray-600 mb-4">
            Step-by-step instructions for assembling your DIY electronics projects.
          </p>
          <div class="space-y-2">
            <a href="/docs/builds/csstb" class="block text-primary-600 hover:text-primary-700">
              → CSSTB Build Guide
            </a>
            <a href="/docs/P.E._Colorsound.Supa.rev1.pdf" class="block text-primary-600 hover:text-primary-700" target="_blank">
              → CSSTB Schematic (PDF)
            </a>
            <a href="/docs/P.E._Colorsound.Supa.rev1.BOM.pdf" class="block text-primary-600 hover:text-primary-700" target="_blank">
              → CSSTB Bill of Materials (PDF)
            </a>
            <a href="/docs/big-muff-project-overview.md" class="block text-primary-600 hover:text-primary-700">
              → Big Muff Pi Documentation
            </a>
            <a href="/docs/tube-screamer-project-overview.md" class="block text-primary-600 hover:text-primary-700">
              → Tube Screamer Documentation
            </a>
          </div>
        </div>

        <!-- Schematics -->
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
          <div class="bg-primary-100 w-12 h-12 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Schematics & BOMs</h3>
          <p class="text-gray-600 mb-4">
            Circuit diagrams and complete bills of materials for all projects.
          </p>
          <div class="space-y-2">
            <a href="/docs/P.E._Colorsound.Supa.rev1.pdf" class="block text-primary-600 hover:text-primary-700" target="_blank">
              → CSSTB Schematic (PDF)
            </a>
            <a href="/docs/P.E._Colorsound.Supa.rev1.BOM.pdf" class="block text-primary-600 hover:text-primary-700" target="_blank">
              → CSSTB Bill of Materials (PDF)
            </a>
            <a href="/docs/schematics/" class="block text-primary-600 hover:text-primary-700">
              → All Schematics
            </a>
          </div>
        </div>

        <!-- Technical Support -->
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
          <div class="bg-primary-100 w-12 h-12 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 100 19.5 9.75 9.75 0 000-19.5z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Technical Support</h3>
          <p class="text-gray-600 mb-4">
            FAQs, troubleshooting, and community support resources.
          </p>
          <div class="space-y-2">
            <a href="/docs/faq" class="block text-primary-600 hover:text-primary-700">
              → Frequently Asked Questions
            </a>
            <a href="/docs/troubleshooting" class="block text-primary-600 hover:text-primary-700">
              → Troubleshooting Guide
            </a>
            <a href="/contact" class="block text-primary-600 hover:text-primary-700">
              → Contact Support
            </a>
          </div>
        </div>

        <!-- Component Guides -->
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
          <div class="bg-primary-100 w-12 h-12 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Component Guides</h3>
          <p class="text-gray-600 mb-4">
            Information about electronic components and where to source them.
          </p>
          <div class="space-y-2">
            <a href="/docs/components/capacitors" class="block text-primary-600 hover:text-primary-700">
              → Capacitor Guide
            </a>
            <a href="/docs/components/resistors" class="block text-primary-600 hover:text-primary-700">
              → Resistor Guide
            </a>
            <a href="/docs/components/sourcing" class="block text-primary-600 hover:text-primary-700">
              → Where to Buy Components
            </a>
          </div>
        </div>

        <!-- Tools & Equipment -->
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
          <div class="bg-primary-100 w-12 h-12 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Tools & Equipment</h3>
          <p class="text-gray-600 mb-4">
            Recommended tools and equipment for DIY electronics projects.
          </p>
          <div class="space-y-2">
            <a href="/docs/tools/soldering" class="block text-primary-600 hover:text-primary-700">
              → Soldering Equipment
            </a>
            <a href="/docs/tools/measurement" class="block text-primary-600 hover:text-primary-700">
              → Measurement Tools
            </a>
            <a href="/docs/tools/workspace" class="block text-primary-600 hover:text-primary-700">
              → Setting Up Your Workspace
            </a>
          </div>
        </div>

        <!-- Video Tutorials -->
        <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow">
          <div class="bg-primary-100 w-12 h-12 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1.586a1 1 0 01.707.293l2.414 2.414a1 1 0 00.707.293H15M9 10v4a1 1 0 001 1h4M9 10V9a1 1 0 011-1h4a1 1 0 011 1v1m-4 4h.01"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Video Tutorials</h3>
          <p class="text-gray-600 mb-4">
            Watch along as we build projects step by step.
          </p>
          <div class="space-y-2">
            <a href="#" class="block text-gray-400">
              → Coming Soon
            </a>
            <a href="#" class="block text-gray-400">
              → Subscribe for Updates
            </a>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Document Repository -->
  <section class="bg-gray-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Document Repository</h2>
        <p class="text-xl text-gray-600">
          All project files organized and easily accessible
        </p>
      </div>

      <!-- File Browser Interface -->
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="bg-gray-50 px-6 py-4 border-b border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900">Project Files</h3>
        </div>
        
        <div class="divide-y divide-gray-200">
          <!-- Folder: CSSTB Project -->
          <div class="px-6 py-4 hover:bg-gray-50 transition-colors">
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z"></path>
              </svg>
              <div class="flex-1">
                <a href="/docs/projects/csstb/" class="text-primary-600 hover:text-primary-700 font-medium">
                  CSSTB - Colorsound Supa Tonebender
                </a>
                <p class="text-sm text-gray-500">Complete project files including schematic, BOM, and build guide</p>
              </div>
              <span class="text-sm text-gray-400">4 files</span>
            </div>
          </div>

          <!-- Folder: Big Muff Pi Project -->
          <div class="px-6 py-4 hover:bg-gray-50 transition-colors">
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z"></path>
              </svg>
              <div class="flex-1">
                <a href="/docs/big-muff-project-overview.md" class="text-primary-600 hover:text-primary-700 font-medium">
                  Big Muff Pi Clone - P.E. DIY-002
                </a>
                <p class="text-sm text-gray-500">Classic fuzz distortion project documentation</p>
              </div>
              <span class="text-sm text-gray-400">3 files</span>
            </div>
          </div>

          <!-- Folder: Tube Screamer Project -->
          <div class="px-6 py-4 hover:bg-gray-50 transition-colors">
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z"></path>
              </svg>
              <div class="flex-1">
                <a href="/docs/tube-screamer-project-overview.md" class="text-primary-600 hover:text-primary-700 font-medium">
                  Tube Screamer Clone - P.E. DIY-003
                </a>
                <p class="text-sm text-gray-500">Classic overdrive pedal project files</p>
              </div>
              <span class="text-sm text-gray-400">3 files</span>
            </div>
          </div>

          <!-- File: General Documentation -->
          <div class="px-6 py-4 hover:bg-gray-50 transition-colors">
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
              </svg>
              <div class="flex-1">
                <a href="/docs/general/soldering-guide.pdf" class="text-primary-600 hover:text-primary-700 font-medium">
                  General Soldering Guide
                </a>
                <p class="text-sm text-gray-500">Comprehensive guide to soldering techniques</p>
              </div>
              <span class="text-sm text-gray-400">PDF</span>
            </div>
          </div>

          <!-- File: Component Guide -->
          <div class="px-6 py-4 hover:bg-gray-50 transition-colors">
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd"></path>
              </svg>
              <div class="flex-1">
                <a href="/docs/general/component-reference.pdf" class="text-primary-600 hover:text-primary-700 font-medium">
                  Component Reference Guide
                </a>
                <p class="text-sm text-gray-500">Identification and sourcing information for common components</p>
              </div>
              <span class="text-sm text-gray-400">PDF</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>
