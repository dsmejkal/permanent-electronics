---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Permanent Electronics - DIY Guitar Pedals & Electronics">
  <Navigation />
  
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-neutral-800 to-neutral-900 text-white overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-gradient-to-r from-neutral-800/80 to-neutral-900/80 z-10"></div>
      <img 
        src="/images/products/csstb-pcb.jpg" 
        alt="Guitar pedals and PCB boards background" 
        class="w-full h-full object-cover filter blur-sm opacity-60"
      />
    </div>
    
    <!-- Content -->
    <div class="relative z-20 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-8 text-white drop-shadow-lg">
          Permanent Electronics
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-primary-200 drop-shadow-md">
          DIY Guitar Pedals & Electronics Projects
        </p>
        <p class="text-lg mb-12 text-secondary-200 max-w-3xl mx-auto drop-shadow-md">
          Specializing in high-quality PCBs, detailed schematics, and comprehensive build guides 
          for guitar effects pedals and electronics projects. Build amazing circuits with confidence.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/projects"
            class="bg-primary-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-700 transition-colors shadow-lg"
          >
            Browse Projects
          </a>
          <a
            href="/shop"
            class="border-2 border-primary-600 text-primary-400 px-8 py-3 rounded-lg font-semibold hover:bg-primary-600 hover:text-white transition-colors shadow-lg"
          >
            Shop PCBs
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="py-20 bg-secondary-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
          Featured Products
        </h2>
        <p class="text-xl text-neutral-600">
          High-quality PCBs for your DIY electronics projects
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Product 1: Silver Cord PCB 2-pack -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <img 
            src="/images/products/silver-cord-pcb.jpg" 
            alt="Silver Cord PCB 2-pack" 
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">Silver Cord PCB - 2-pack</h3>
            <p class="text-neutral-600 mb-4">
              Circuit board DIY Fuzz Distortion pedal project. Professional quality PCBs for your fuzz builds.
            </p>
            <div class="flex items-center justify-between mb-4">
              <span class="text-2xl font-bold text-primary-600">$17.00</span>
              <span class="text-sm text-neutral-500">2-pack</span>
            </div>
            <div class="flex space-x-2">
              <button
                class="snipcart-add-item flex-1 bg-primary-600 text-white py-2 px-4 rounded-lg font-semibold hover:bg-primary-700 transition-colors"
                data-item-id="silver-cord-2pack"
                data-item-price="17.00"
                data-item-description="Silver Cord PCB 2-pack - Circuit board DIY Fuzz Distortion pedal project"
                data-item-image="/images/products/silver-cord-pcb.jpg"
                data-item-name="Silver Cord PCB - 2-pack"
              >
                Add to Cart
              </button>
              <a
                href="/shop"
                class="flex-1 border-2 border-primary-600 text-primary-600 py-2 px-4 rounded-lg font-semibold hover:bg-primary-600 hover:text-white transition-colors text-center"
              >
                Details
              </a>
            </div>
          </div>
        </div>

        <!-- Product 2: Tascam Pin -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <img 
            src="/images/products/tascam-pin.jpg" 
            alt="Tascam 388 Pin" 
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">Tascam 388 Vintage Pin</h3>
            <p class="text-neutral-600 mb-4">
              Vintage styled photodome badge metal pin 2" x 1.5". Perfect for music gear enthusiasts.
            </p>
            <div class="flex items-center justify-between mb-4">
              <span class="text-2xl font-bold text-primary-600">$15.00</span>
              <span class="text-sm text-neutral-500">2" x 1.5"</span>
            </div>
            <div class="flex space-x-2">
              <button
                class="snipcart-add-item flex-1 bg-primary-600 text-white py-2 px-4 rounded-lg font-semibold hover:bg-primary-700 transition-colors"
                data-item-id="tascam-pin"
                data-item-price="15.00"
                data-item-description="Tascam 388 vintage styled photodome badge metal pin"
                data-item-image="/images/products/tascam-pin.jpg"
                data-item-name="Tascam 388 Vintage Pin"
              >
                Add to Cart
              </button>
              <a
                href="/shop"
                class="flex-1 border-2 border-primary-600 text-primary-600 py-2 px-4 rounded-lg font-semibold hover:bg-primary-600 hover:text-white transition-colors text-center"
              >
                Details
              </a>
            </div>
          </div>
        </div>

        <!-- Product 3: OD Source PCB -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
          <img 
            src="/images/products/od-source-pcb.jpg" 
            alt="OD Source PCB" 
            class="w-full h-48 object-cover"
          />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">OD Source PCB</h3>
            <p class="text-neutral-600 mb-4">
              DIY Overdrive pedal project. High-quality PCB for building your own overdrive effects.
            </p>
            <div class="flex items-center justify-between mb-4">
              <span class="text-2xl font-bold text-primary-600">$12.00</span>
              <span class="text-sm text-neutral-500">Single PCB</span>
            </div>
            <div class="flex space-x-2">
              <button
                class="snipcart-add-item flex-1 bg-primary-600 text-white py-2 px-4 rounded-lg font-semibold hover:bg-primary-700 transition-colors"
                data-item-id="od-source-pcb"
                data-item-price="12.00"
                data-item-description="OD Source PCB - DIY Overdrive pedal project"
                data-item-image="/images/products/od-source-pcb.jpg"
                data-item-name="OD Source PCB"
              >
                Add to Cart
              </button>
              <a
                href="/shop"
                class="flex-1 border-2 border-primary-600 text-primary-600 py-2 px-4 rounded-lg font-semibold hover:bg-primary-600 hover:text-white transition-colors text-center"
              >
                Details
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="text-center mt-12">
        <a
          href="/shop"
          class="inline-flex items-center bg-primary-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-primary-700 transition-colors"
        >
          View All Products
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Features -->
  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
          Why Choose Permanent Electronics?
        </h2>
        <p class="text-xl text-neutral-600">
          Professional quality, detailed documentation, and passionate support
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="bg-primary-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">High-Quality PCBs</h3>
          <p class="text-neutral-600">
            Professional-grade PCBs manufactured to the highest standards with excellent component placement and routing.
          </p>
        </div>

        <div class="text-center">
          <div class="bg-primary-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">Detailed Documentation</h3>
          <p class="text-gray-600">
            Complete schematics, bills of materials, and step-by-step build guides for every project.
          </p>
        </div>

        <div class="text-center">
          <div class="bg-primary-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 100 19.5 9.75 9.75 0 000-19.5"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-4">Expert Support</h3>
          <p class="text-gray-600">
            Get help from experienced electronics enthusiasts. We're here to support your DIY journey.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section class="bg-neutral-800 text-white py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold mb-4">
        Stay Updated with Our Latest Projects
      </h2>
      <p class="text-xl mb-8 text-secondary-200">
        Get new DIY projects, tutorials, and exclusive PCB releases delivered to your inbox.
      </p>
      <form class="max-w-md mx-auto flex flex-col sm:flex-row gap-4">
        <input
          type="email"
          name="email"
          placeholder="Enter your email address"
          class="flex-1 px-4 py-3 rounded-lg text-neutral-900 placeholder-neutral-500 focus:outline-none focus:ring-2 focus:ring-primary-500"
          required
        />
        <button
          type="submit"
          class="bg-primary-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-700 transition-colors"
        >
          Subscribe
        </button>
      </form>
    </div>
  </section>

  <Footer />
</Layout>
